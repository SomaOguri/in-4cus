<h1>23区のワークスペースを探す</h1>
<h2>ワークスペースの特徴</h2>
<!--タグ検索の部分-->
<%= form_tag workspaces_path, method: :get, class: 'boards__searchForm' do %>
  <%= select_tag :tag_id,
    options_from_collection_for_select(Tag.all, :id, :tag_name, params[:tag_id]),
    {
      prompt: '23区から絞り込む',
      onchange: 'submit(this.form);'
    }
  %>
<%= page_entries_info @workspaces %>
<%= paginate @workspaces %>
<% end %>

