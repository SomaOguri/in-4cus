<div class="workspaces-container">
  <% @workspaces.each do |t| %>
    <div class="workspace">
      <%= t.name %>
      <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.monday%>
      <%= t.mondaytime%>
      <%= t.tuesday%>
      <%= t.tuesdaytime%>
      <%= t.wednesday%>
      <%= t.wednesdaytime%>
      <%= t.thursday%>
      <%= t.thursdaytime%>
      <%= t.friday%>
      <%= t.fridaytime%>
      <%= t.saturday%>
      <%= t.saturdaytime%>
      <%= t.sunday%>
      <%= t.sundaytime%>
      <%= t.homepage %>
      コンセント<%= t.outlet %>
      wifi<%= t.wifi %>
      面接<%= t.interview %>
      会話<%= t.conversation %>
      喫煙<%= t.smoking %>
      <% t.tags.each do |tag| %>
        <%= tag.tag_name %>
      <% end %>
      <%= button_to "削除する", workspace_path(t.id), method: :delete %>
    </div>
  <% end %>
</div>
